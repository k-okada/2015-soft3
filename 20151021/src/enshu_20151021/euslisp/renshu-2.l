(defun make-sliderail ()
  (let (b1)
    (setq b1 (make-cube 10 30 300))
    b1))
(defun make-slideblock ()
  (let (b1 b2)
    (setq b1 (make-cube 30 40 40))
    (setq b2 (make-cube 10 30 50))
    (setq b1 (body- b1 b2))
    b1))

(setq sliderail (instance bodyset-link :init (make-cascoords) :bodies (list (make-sliderail))))
(setq slideblock (instance bodyset-link :init (make-cascoords) :bodies (list (make-slideblock))))
(setq joint (instance linear-joint :init :parent-link sliderail :child-link slideblock :axis :z))
(setq r (instance cascaded-link :init))
(send r :assoc slideblock)
(send slideblock :assoc sliderail)
(setq (r . links) (list slideblock sliderail))
(setq (r . joint-list) (list joint))
(send r :init-ending)

(objects (list r))

