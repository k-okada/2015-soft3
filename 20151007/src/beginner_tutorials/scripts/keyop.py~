#! /usr/bin/env python

import sys

import rospy
import roslib
from geometry_msgs.msg import Twist

def setvelocity(x,y,r):
    pub = rospy.Publisher('mobile_base/commands/velocity',Twist)
    rospy.init_node('MyKeyop')
    setvelocity = Twist()
    setvelocity.linear.x = x;
    setvelocity.linear.y = y;
    setvelocity.angular.z = r;
    while not rospy.is_shutdown():
        pub.publish(setvelocity)
        rospy.sleep(0.1)

if __name__ =='__main__':

    if len(sys.argv) == 4:
        x = float(sys.argv[1])
        y = float(sys.argv[2])
        r = float(sys.argv[3])
        setvelocity(x,y,r)


